	rooms = {{rType = "controll", x = 14, y = 4, level = 3, damage = 0, repair = 0}, {rType = "weapons", x = 17, y = 2, level = 7, damage = 0, repair = 0}, {rType = "shields", x = 17, y = 6, level = 2, damage = 0, repair = 0}}},
